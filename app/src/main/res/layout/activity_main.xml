<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8F5E9">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center">

        <!-- Recycle Icon/Image -->
        <ImageView
            android:id="@+id/imageRecycle"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginBottom="24dp"
            android:src="@drawable/recycle_image"/>


        <!-- Title -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to RecycleHub"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#2E7D32"
            android:layout_marginBottom="32dp" />

        <!-- Submit Recycle Button -->
        <Button
            android:id="@+id/btnSubmitRecycle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="♻️ Submit Recycle"
            android:textSize="18sp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="#66BB6A"
            android:textColor="#FFFFFF"
            android:padding="12dp"
            android:elevation="4dp" />

        <!-- View Requests Button -->
        <Button
            android:id="@+id/btnViewRequests"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="📄 View Requests"
            android:textSize="18sp"
            android:backgroundTint="#388E3C"
            android:textColor="#FFFFFF"
            android:padding="12dp"
            android:elevation="4dp" />

        <Button
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#D32F2F"
            android:onClick=""
            android:elevation="4dp"
            android:padding="12dp"
            android:text="🚪 Logout"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

    </LinearLayout>
</ScrollView>